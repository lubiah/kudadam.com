@import './torchlight.postcss';

/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@custom-selector :--heading h1, h2, h3, h4, h5, h6;

:root {
	/* https://www.fluid-type-scale.com/calculate?minFontSize=16&minWidth=360&minRatio=1.125&maxFontSize=18&maxWidth=1536&maxRatio=1.2&steps=base%2Ch6%2Ch5%2Ch4%2Ch3%2Ch2%2Ch1&baseStep=base&prefix=font-size&decimals=2&remValue=16&previewFont=Inter */
	--font-size-base: clamp(1rem, 0.17vw + 0.96rem, 1.13rem);
	--font-size-h6: clamp(1.13rem, 0.31vw + 1.06rem, 1.35rem);
	--font-size-h5: clamp(1.27rem, 0.48vw + 1.16rem, 1.62rem);
	--font-size-h4: clamp(1.42rem, 0.71vw + 1.26rem, 1.94rem);
	--font-size-h3: clamp(1.6rem, 0.99vw + 1.38rem, 2.33rem);
	--font-size-h2: clamp(1.8rem, 1.36vw + 1.5rem, 2.8rem);
	--font-size-h1: clamp(2.03rem, 1.81vw + 1.62rem, 3.36rem);
}

@layer base {

	body {
		font-family: Inter, 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		font-size: var(--font-size-base);
		@apply text-gray-800;
	}

	small {
		@apply text-sm;
	}

	:--heading {
		@apply font-black tracking-tight leading-tighter mt-[0.6em] mb-[0.2em];
	}

	h4 {
		font-size: var(--font-size-h4);
	}

	h3 {
		font-size: var(--font-size-h3);
	}

	h2 {
		font-size: var(--font-size-h2);
	}

	h1 {
		font-size: var(--font-size-h1);
	}

	pre {
		white-space: pre;
		overflow-x: auto;
		word-break: break-word;
		@apply my-6;
		@apply p-2;
	}

	p {
		margin: 0.5rem 0px 1rem;
	}

	code:not(.torchlight) {
		@apply before:content-['`'] after:content-['`'];
	}
}

/* inter-regular - latin */
@font-face {
	font-display: swap; /* Check https://developer.mozilla.org/en-US/docs/Web/CSS/@font-face/font-display for other options. */
	font-family: 'Inter';
	font-style: normal;
	font-weight: 400;
	src: url('/fonts/inter-v12-latin-regular.woff2') format('woff2'),
		/* Chrome 36+, Opera 23+, Firefox 39+ */ url('/fonts/inter-v12-latin-regular.woff')
			format('woff'); /* Chrome 5+, Firefox 3.6+, IE 9+, Safari 5.1+ */
}
